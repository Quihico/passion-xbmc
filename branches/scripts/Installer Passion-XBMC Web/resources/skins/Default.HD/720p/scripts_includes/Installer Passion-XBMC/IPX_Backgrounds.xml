<includes>
	<include name="IPXCommonHomeBackground">
		<control type="multiimage">
			<description>control list 9000 backgrounds</description>
			<posx>0</posx>
			<posy>0</posy>
			<width>1280</width>
			<height>720</height>
			<imagepath fallback="special://profile/script_data/skin_backgrounds/IPX/installer.jpg" background="true">$INFO[Container(9000).ListItem.Icon]</imagepath>
			<timeperimage>8000</timeperimage>
			<randomize>true</randomize>
			<fadetime>1000</fadetime>
		</control>
	</include>
	<include name="IPXCommonInstallerBackground">
		<control type="multiimage">
			<posx>0</posx>
			<posy>0</posy>
			<width>1280</width>
			<height>720</height>
			<imagepath fallback="special://profile/script_data/skin_backgrounds/IPX/installer.jpg" background="true">$INFO[Container.ListItem.Property(fanartpicture)]</imagepath>
			<timeperimage>10000</timeperimage>
			<randomize>true</randomize>
			<fadetime>1000</fadetime>
			<visible>!Skin.HasSetting(IPX_FanartFull) | Skin.HasSetting(IPX_HideCompass) | !Skin.HasSetting(IPX_Compass_Fanart) | Control.IsVisible(50) | Control.IsVisible(51) | Control.IsVisible(52)</visible>
		</control>
		<control type="multiimage">
			<posx>0</posx>
			<posy>0</posy>
			<width>1280</width>
			<height>720</height>
			<imagepath background="true">special://profile/script_data/skin_backgrounds/IPX/installer.jpg</imagepath>
			<timeperimage>10000</timeperimage>
			<randomize>true</randomize>
			<fadetime>1000</fadetime>
			<visible>Skin.HasSetting(IPX_FanartFull) | [Control.IsVisible(59) + Skin.HasSetting(IPX_Compass_Fanart)]</visible>
			<include>IPXWindow_OpenClose_Animation</include>
		</control>
	</include>
	<include name="IPXCommonManagerBackground">
		<control type="multiimage">
			<posx>0</posx>
			<posy>0</posy>
			<width>1280</width>
			<height>720</height>
			<imagepath fallback="special://profile/script_data/skin_backgrounds/IPX/scripts.jpg" background="true">$INFO[Skin.String(Home_Custom_Back_Scripts_Folder)]</imagepath>
			<timeperimage>10000</timeperimage>
			<randomize>true</randomize>
			<fadetime>1000</fadetime>
		</control>
	</include>
	<include name="IPXCommonForumBackground">
		<control type="multiimage">
			<posx>0</posx>
			<posy>0</posy>
			<width>1280</width>
			<height>720</height>
			<imagepath fallback="special://profile/script_data/skin_backgrounds/IPX/pictures.jpg" background="true">$INFO[Skin.String(Home_Custom_Back_Pictures_Folder)]</imagepath>
			<timeperimage>10000</timeperimage>
			<randomize>true</randomize>
			<fadetime>1000</fadetime>
		</control>
	</include>
	<include name="CommonNightlyBackground">
		<control type="multiimage">
			<posx>0</posx>
			<posy>0</posy>
			<width>1280</width>
			<height>720</height>
			<imagepath background="true">special://profile/script_data/skin_backgrounds/IPX/nightly2.jpg</imagepath>
			<timeperimage>10000</timeperimage>
			<randomize>true</randomize>
			<fadetime>1000</fadetime>
		</control>
	</include>
	<include name="CommonSettingsBackground">
		<control type="multiimage">
			<posx>0</posx>
			<posy>0</posy>
			<width>1280</width>
			<height>720</height>
			<imagepath fallback="special://profile/script_data/skin_backgrounds/IPX/settings.jpg" background="true">$INFO[Skin.String(Home_Custom_Back_Settings_Folder)]</imagepath>
			<timeperimage>10000</timeperimage>
