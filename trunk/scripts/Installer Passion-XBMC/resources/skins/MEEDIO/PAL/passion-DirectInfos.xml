				<posy>151</posy>
				<width>679</width>
				<height>41</height>
				<texture>$INFO[Skin.String(PassionSkinColourPath),,\passion-list-header-big.png]</texture>
				<bordertexture border="5">IPX-list-border.png</bordertexture>
				<bordersize>2</bordersize>
			</control>
			<control type="image">
				<description>separator image for list of feeds and text of topic</description>
				<posx>20</posx>
				<posy>345</posy>
				<width>679</width>
				<height>5</height>
