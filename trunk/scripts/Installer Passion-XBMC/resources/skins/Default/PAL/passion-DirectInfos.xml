<window>
	<defaultcontrol>191</defaultcontrol>
	<allowoverlays>no</allowoverlays>

	<controls>
		<!-- BACKGROUNDS -->
		<control type="image">
			<description>background image</description>
			<posx>0</posx>
			<posy>0</posy>
			<width>720</width>
			<height>576</height>
			<texture>$INFO[Skin.String(PassionSkinColourPath),,\passion-background-plain.png]</texture>
		</control>
		<control type="image">
			<description>passion logo image</description>
			<posx>20</posx>
			<posy>11</posy>
			<width>250</width>
			<height>74</height>
			<aspectratio>keep</aspectratio>
			<texture>$INFO[Skin.String(PassionSkinColourPath),,\passion-logo.png]</texture>
		</control>
		<control type="multiimage">
			<description>animation plasma</description>
			<posx>580</posx>
			<posy>11</posy>
			<width>150</width>
			<height>74</height>
			<aspectratio>keep</aspectratio>
			<imagepath>passion-plasma</imagepath>
			<timeperimage>4000</timeperimage>
			<fadetime>2000</fadetime>
			<visible>!Skin.String(PassionSkinColourPath,style_PMIII.HD)</visible>
		</control>

		<!-- CONTENT PANEL -->
		<control type="group">
			<animation effect="slide" time="200" start="720,0" end="0,0" acceleration="-1">WindowOpen</animation>
			<animation effect="slide" time="200" start="0,0" end="720,0" acceleration="1.1">WindowClose</animation>
			<control type="image">
				<description>contentpanel slice</description>
				<posx>19</posx>
				<posy>150</posy>
				<width>681</width>
				<height>416</height>
				<texture>passion-list-border.png</texture>
			</control>
			<control type="image">
				<description>contentpanel slice</description>
				<posx>20</posx>
				<posy>193</posy>
				<width>679</width>
				<height>372</height>
				<texture>passion-list-white.png</texture>
			</control>
			<control type="image">
				<description>contentpanel slice Custom background</description>
				<posx>20</posx>
				<posy>193</posy>
				<width>679</width>
				<height>372</height>
				<!--<aspectratio scalediffuse="false">scale</aspectratio>-->
				<texture diffuse="passion_diffuse.png" />
				<info>Skin.String(passion_custom_background)</info>
				<visible>Skin.HasSetting(use_passion_custom_background)</visible>
			</control>
			<control type="image">
				<description>contentpanel slice</description>
				<posx>20</posx>
				<posy>151</posy>
				<width>679</width>
				<height>41</height>
				<texture>$INFO[Skin.String(PassionSkinColourPath),,\passion-list-header.png]</texture>
			</control>
			<control type="image">
				<description>separator image for list of feeds and text of topic</description>
				<posx>20</posx>
				<posy>345</posy>
				<width>679</width>
				<height>5</height>
				<texture>IPX-separator.png</texture>
				<aspectratio align="center" />
				<colordiffuse>$INFO[Skin.String(PassionSkinHexColour)]</colordiffuse>
			</control>
		</control>

		<control type="group">
			<animation effect="fade" start="0" end="100" delay="200" time="100">WindowOpen</animation>
			<animation effect="fade" start="100" end="0" delay="0" time="100">WindowClose</animation>

			<!-- LABELS -->
			<control type="label">
				<description>date | time label</description>
				<posx>680</posx>
				<posy>86</posy>
				<label>$INFO[System.Date] [COLOR=60ffffff] |  $INFO[System.Time][/COLOR]</label>
				<align>right</align>
				<aligy>center</aligy>
				<font>special12</font>
				<animation effect="slide" start="0,0" end="0,-50" time="0" condition="Skin.String(PassionSkinColourPath,style_PMIII.HD)">conditional</animation>
			</control>
			<control type="label">
				<description>tilte - category label</description>
				<posx>27</posx>
				<posy>160</posy>
				<width>679</width>
				<height>30</height>
				<align>left</align>
				<label>[B]$LOCALIZE[SCRIPT199]:[/B] $INFO[Container.Property(Category)]</label>
				<font>special13</font>
			</control>

			<!-- CONTROL LIST RSS, BACKGROUND AND SCROLLBAR CONTROLS -->
			<control type="image">
				<description>scrollbar background image for RSS feeds</description>
				<posx>190</posx>
				<posy>117</posy>
				<width>340</width>
				<height>25</height>
				<texture border="4">passion-scrollbar_background_hor.png</texture>
