			<!-- ** Required ** Do not change id's or type's -->
			<control type="wraplist" id="150">
				<description>List for all RSS feeds</description>
				<posx>190</posx>
				<posy>117</posy>
				<width>340</width>
				<height>25</height>
				<onleft>150</onleft>
				<onright>150</onright>
				<onup>191</onup>
				<ondown>191</ondown>
				<orientation>horizontal</orientation>
				<pagecontrol>250</pagecontrol>
				<scrolltime>200</scrolltime>
				<focusposition>0</focusposition>
				<itemlayout width="340" height="25">
					<control type="label">
						<posx>170</posx>
						<posy>0</posy>
						<width>340</width>
						<height>22</height>
						<font>font11</font>
						<aligny>center</aligny>
						<selectedcolor>FFe2ff43</selectedcolor>
						<textcolor>ffffffff</textcolor>
						<align>center</align>
						<info>ListItem.Label</info>
					</control>
				</itemlayout>
				<focusedlayout height="25" width="340">
					<control type="image">
						<width>340</width>
						<height>25</height>
						<posx>0</posx>
						<posy>0</posy>
						<visible>Control.HasFocus(150)</visible>
						<texture>passion-list-focus.png</texture>
					</control>
					<control type="label">
						<posx>170</posx>
						<posy>0</posy>
						<width>340</width>
						<height>22</height>
						<font>font11</font>
						<aligny>center</aligny>
						<selectedcolor>FFe2ff43</selectedcolor>
						<textcolor>ffffffff</textcolor>
						<align>center</align>
						<info>ListItem.Label</info>
					</control>
				</focusedlayout>
			</control>
			<!-- **Requis ** Ne pas modifier l'identifiant ou le type-->
			<!-- ** Required ** Do not change id's or type's -->
			<control type="scrollbar" id="250">
				<description>Scroll Bar for RSS feeds</description>
				<posx>190</posx>
				<posy>117</posy>
				<width>340</width>
				<height>5</height>
				<texturesliderbackground>-</texturesliderbackground>
				<texturesliderbar border="4">passion-progress_mid.png</texturesliderbar>
				<texturesliderbarfocus border="4">passion-progress_mid.png</texturesliderbarfocus>
				<textureslidernib>-</textureslidernib>
				<textureslidernibfocus>-</textureslidernibfocus>
				<showonepage>false</showonepage>
				<orientation>horizontal</orientation>
			</control>
			<control type="image">
				<description>icon rss section</description>
				<posx>566</posx>
				<posy>220</posy>
				<width>100</width>
				<height>100</height>
				<aspectratio align="center" aligny="center">keep</aspectratio>
				<texture>$INFO[Container(150).ListItem.ActualIcon,icones\]</texture>
				<!--<visible>Control.HasFocus(150)</visible>-->
				<animation effect="fade" reversible="true" time="400">VisibleChange</animation>
			</control>
			<control type="image">
				<posx>566</posx>
				<posy>320</posy>
				<width>100</width>
				<height>50</height>
				<texture flipy="true" diffuse="passion-diffuse_mirror.png">$INFO[Container(150).ListItem.ActualIcon,icones\]</texture>
				<aspectratio align="center" aligny="top">stretch</aspectratio>
				<!--<visible>Control.HasFocus(150)</visible>-->
				<animation effect="fade" reversible="true" time="400">VisibleChange</animation>
			</control>
			<control type="group">
				<visible>!IsEmpty(Container(191).ListItem.Property(Slideshow))</visible>
				<control type="image">
					<description>icon rss section</description>
					<posx>543</posx>
					<posy>299</posy>
					<width>21</width>
					<height>21</height>
					<texture>passion-infoicon.png</texture>
					<aspectratio aligny="bottom">keep</aspectratio>
					<colordiffuse>$INFO[Skin.String(PassionSkinHexColour)]</colordiffuse>
					<animation effect="fade" reversible="true" time="400">VisibleChange</animation>
				</control>
				<control type="image">
