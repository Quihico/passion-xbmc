<includes>
	<include name="HomePicturesMenu">

		<control type="group" id="1300">
			<include>home-start-column</include>
			<include>zoomout</include>
			<include>home-submenu</include>
			<include>fadeinout</include>
			<posx>158</posx>
			<posy>61</posy>
			<onup>9000</onup>

			<visible allowhiddenfocus="true">ControlGroup(9000).HasFocus(3) | ControlGroup(1300).HasFocus(3)</visible>	
			<visible>!System.IdleTime(22)</visible>
			<control type="image">
				<posx>50</posx>
				<posy>44</posy>
				<width>14</width>
				<height>26</height>						
				<texture>scroll-right.png</texture>				
				<visible allowhiddenfocus="true">Control.HasFocus(600)</visible>
			</control>
			<control type="buttonscroller" id="600">
				<visible allowhiddenfocus="true">Control.HasFocus(600)</visible>
				<posx>72</posx>
				<posy>0</posy>
				<width>315</width>
				<height>37</height>
				<buttongap>0</buttongap>
				<numbuttons>4</numbuttons>
				<orientation>vertical</orientation>
				<align>left</align>
				<aligny>center</aligny>
				<movement>0</movement>
				<defaultbutton>2</defaultbutton>
				<wraparound>yes</wraparound>
				<smoothscrolling>yes</smoothscrolling>
				<alpha>70</alpha>
				<font>menubarhomesub</font>
				<onleft>9000</onleft>
				<onright>9000</onright>
				<ondown>600</ondown>
				<onup>600</onup>
				<texturefocus>-</texturefocus>
				<texturenofocus>-</texturenofocus>
				<textoffsetx>0</textoffsetx>
				<textcolor>sublabel-text</textcolor>
				<focusedcolor>label-text</focusedcolor>
				<include>select</include>

				<buttons>

					<button id="1">
						<!-- <label>31914</label> -->
						<label>Plugins</label>
						<onclick>ActivateWindow(Pictures,plugin://pictures)</onclick>
					</button>

					<button id="2">
						<!-- <label>108</label> -->
						<label>1</label>
						<onclick>ActivateWindow(2007)</onclick>
					</button>
					<button id="3">
						<label>1036</label>
						<onclick>XBMC.ActivateWindow(Pictures,$INFO[Skin.String(FavPicspath)])</onclick>	
					</button>
					<button id="4">
						<label>Wua.la</label>					
						<onclick>XBMC.ActivateWindow(MyPictures,$INFO[Skin.String(Wualamenupath)])</onclick>						
					</button>

				</buttons>
			</control>

		</control>
		<control type="image">
			<posx>460</posx>
			<posy>48</posy>
			<width>240</width>
			<height>240</height>						
			<texture>wuala_logo.png</texture>				
			<aspectratio>keep</aspectratio>			
			<visible allowhiddenfocus="true">Control.HasFocus(600) + Buttonscroller.HasFocus(4) + !Skin.HasSetting(bigImage)</visible>
			<include>pageslide</include>
		</control>
		<control type="image">
			<posx>460</posx>
			<posy>84</posy>
			<width>180</width>
			<height>180</height>						
			<texture>favourite-home.png</texture>				
			<aspectratio>keep</aspectratio>
			<visible allowhiddenfocus="true">Control.HasFocus(600) + Buttonscroller.HasFocus(3) + !Skin.HasSetting(bigImage)</visible>			
			<include>pageslide</include>
		</control>
	</include>
</includes>
