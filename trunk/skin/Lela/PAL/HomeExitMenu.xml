<includes>
	<include name="HomeExitMenu">

		<control type="group" id="1800">
			<include>home-start-column</include>
			<include>zoomout</include>
			<include>home-submenu</include>
			<include>fadeinout</include>
			<posx>164</posx>
			<posy>61</posy>
			<onup>9000</onup>	

			<visible allowhiddenfocus="true">ControlGroup(9000).HasFocus(6) | ControlGroup(1800).HasFocus(0)</visible>	
			<visible>!System.IdleTime(22)</visible>
			<control type="image">
				<posx>534</posx>
				<posy>43</posy>
				<width>14</width>
				<height>26</height>						
				<texture>scroll-left.png</texture>				
				<visible allowhiddenfocus="true">Control.HasFocus(8000)</visible>
			</control>
			<control type="buttonscroller" id="8000">
				<visible allowhiddenfocus="true">Control.HasFocus(8000)</visible>
				<posx>210</posx>
				<posy>0</posy>
				<width>315</width>
				<height>37</height>
				<buttongap>0</buttongap>
				<numbuttons>6</numbuttons>
				<orientation>vertical</orientation>
				<align>right</align>
				<aligny>center</aligny>
				<movement>0</movement>
				<defaultbutton>2</defaultbutton>
				<wraparound>yes</wraparound>
				<smoothscrolling>yes</smoothscrolling>
				<alpha>70</alpha>
				<font>menubarhomesub</font>
				<onleft>9000</onleft>
				<onright>9000</onright>
				<ondown>8000</ondown>
				<onup>8000</onup>
				<texturefocus>-</texturefocus>
				<texturenofocus>-</texturenofocus>
				<textoffsetx>0</textoffsetx>
				<textcolor>sublabel-text</textcolor>
				<focusedcolor>label-text</focusedcolor>
				<include>select</include>

				<buttons>
					<button id="1">
						<label>13009</label>
						<onclick>XBMC.ShutDown()</onclick>
					</button>

					<button id="2">
						<label>20126</label>
						<onclick>dialog.close(all,true)</onclick>
						<onclick>system.logoff</onclick>
					</button>

					<button id="3">
						<label>13313</label>
						<onclick>XBMC.RestartApp()</onclick>
					</button>

					<button id="4">
						<label>482</label>
						<onclick>XBMC.Credits</onclick>
					</button>

					<button id="5">
						<label>20183</label>
						<onclick>XBMC.ReloadSkin()</onclick>
					</button>
					<button id="6">
						<label>13011</label>
						<onclick>XBMC.Suspend</onclick>
					</button>

					<button id="7">
						<label>13010</label>
						<onclick>XBMC.Hibernate</onclick>
					</button>
					<button id="8">
						<label>Power OFF</label>
						<onclick>XBMC.Powerdown</onclick>
					</button>
				</buttons>
			</control>

		</control>
		<control type="image">
			<posx>62</posx>
			<posy>117</posy>
			<width>130</width>
			<height>130</height>						
			<texture>home-power-focus.png</texture>				
			<aspectratio>keep</aspectratio>
			<visible allowhiddenfocus="true">Control.HasFocus(8000) + Buttonscroller.HasFocus(8) + !Skin.HasSetting(bigImage)</visible>
			<!-- <visible allowhiddenfocus="true">Buttonscroller.HasFocus(1)</visible> -->
			<include>pageslide</include>
		</control>
		<control type="image">
			<posx>62</posx>
			<posy>117</posy>
			<width>130</width>
			<height>130</height>						
			<texture>hibernate-home.png</texture>				
			<aspectratio>keep</aspectratio>
			<visible allowhiddenfocus="true">Control.HasFocus(8000) + Buttonscroller.HasFocus(7) + !Skin.HasSetting(bigImage)</visible>
			<!-- <visible allowhiddenfocus="true">Buttonscroller.HasFocus(1)</visible> -->
			<include>pageslide</include>
		</control>
		<control type="image">
			<posx>35</posx>
			<posy>73</posy>
			<width>200</width>
			<height>200</height>						
			<texture>theme-change-home.png</texture>				
			<aspectratio>keep</aspectratio>
			<visible allowhiddenfocus="true">Control.HasFocus(8000) + Buttonscroller.HasFocus(5) + !Skin.HasSetting(bigImage)</visible>
			<!-- <visible allowhiddenfocus="true">Buttonscroller.HasFocus(1)</visible> -->
			<include>pageslide</include>
		</control>
		<control type="image">
			<posx>35</posx>
			<posy>73</posy>
			<width>200</width>
			<height>200</height>						
			<texture>restart-home.png</texture>				
			<aspectratio>keep</aspectratio>
			<visible allowhiddenfocus="true">Control.HasFocus(8000) + Buttonscroller.HasFocus(3) + !Skin.HasSetting(bigImage)</visible>
			<!-- <visible allowhiddenfocus="true">Buttonscroller.HasFocus(1)</visible> -->
			<include>pageslide</include>
		</control>
		<control type="image">
			<posx>-10</posx>
			<posy>-42</posy>
			<width>410</width>
			<height>410</height>						
			<texture>poweroff-xbmc-home.png</texture>				
			<aspectratio>keep</aspectratio>
			<visible allowhiddenfocus="true">Control.HasFocus(8000) + Buttonscroller.HasFocus(1) + !Skin.HasSetting(bigImage)</visible>
			<!-- <visible allowhiddenfocus="true">Buttonscroller.HasFocus(1)</visible> -->
			<include>pageslide</include>
		</control>
		<control type="image">
			<posx>35</posx>
			<posy>18</posy>
			<width>260</width>
			<height>260</height>						
			<texture>logOff-home.png</texture>				
			<aspectratio>keep</aspectratio>
			<visible allowhiddenfocus="true">Control.HasFocus(8000) + Buttonscroller.HasFocus(2) + !Skin.HasSetting(bigImage)</visible>
			<!-- <visible allowhiddenfocus="true">Buttonscroller.HasFocus(1)</visible> -->
			<include>pageslide</include>
		</control>
		<control type="image">
			<posx>50</posx>
			<posy>88</posy>
			<width>170</width>
			<height>170</height>						
			<texture>Suspend-home.png</texture>				
			<aspectratio>keep</aspectratio>
			<visible allowhiddenfocus="true">Control.HasFocus(8000) + Buttonscroller.HasFocus(6) + !Skin.HasSetting(bigImage)</visible>
			<!-- <visible allowhiddenfocus="true">Buttonscroller.HasFocus(1)</visible> -->
			<include>pageslide</include>
		</control>
	</include>
</includes>
